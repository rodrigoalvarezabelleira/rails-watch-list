<h2><%= @list.name %></h2>
<p><%= link_to "Create New Bookmark", new_list_bookmark_path(@list) %></p>
<ul> <% @list.bookmarks.each do |bookmark| %>
<h3>Movie</h3>
<p><%= bookmark.movie.title %></p>
<ul><%= image_tag bookmark.movie.poster_url %></ul>
<h5>Comment</h5>
<p><%= bookmark.comment.capitalize %></p>
<%= link_to "Delete",
  bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<% end %>
</ul>
<p><%= link_to "Home", lists_path %></p>
